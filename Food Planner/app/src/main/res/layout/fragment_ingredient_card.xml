<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dayCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    tools:context=".View.CategoryCardFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ingrImage"
        android:layout_width="80dp"
        android:layout_marginStart="20dp"
        android:layout_height="80dp"
        android:src="@drawable/bg_image1"
        app:civ_border_color="@color/yellow"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingrMeasure"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"
        android:text="500 g"
        android:textColor="@color/black"
        android:alpha="0.9"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ingrImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingrName"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:text="Miscellaneous"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ingrMeasure"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>